{% extends "base.html.twig" %}

{% block title %}Création d'un livre{% endblock %}

{% block content %}
    <p>&larr;&nbsp;<a href="/index.php">Retourner à la liste</a></p>

    <form action="/create.php" method="post">
        <label for="title">Titre :</label>
        <input type="text" id="title" name="title" size="100"
               value="{{ values.title|default('') }}">

        <label for="author">Auteur :</label>
        <input type="text" id="author" name="author" size="50"
               value="{{ values.author|default('') }}">

        <label for="century">Siècle :</label>
        <input type="number" id="century" name="century"
               value="{{ values.century|default('') }}">

        <button type="submit">Ajouter</button>
    </form>
{% endblock %}
